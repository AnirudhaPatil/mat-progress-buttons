{
    "compilerOptions": {
        "outDir": "./dist",
        "rootDir": "./src",
        "experimentalDecorators": true,
        "module": "es2015",
        "target": "es5",
        "noImplicitAny": false,
        "suppressImplicitAnyIndexErrors": true,
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "forceConsistentCasingInFileNames": true,
        "sourceMap": true,
        "skipLibCheck": true,
        "inlineSources": false,
        "declaration": true,
        "lib": [
            "es2015",
            "dom"
        ],
        "newLine": "LF",
        "baseUrl": "."
    },
    "files": [
        "src/index.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}